<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.MortgageActivity">

    <TextView
        android:id="@+id/mg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mg_title"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_margin="10dp"/>

    <TextView
        android:id="@+id/mg_mortgage_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mg_mortgage_title"
        android:layout_below="@id/mg_title"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        />
    <EditText
        android:id="@+id/mg_mortgage_value"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/mg_mortgage_title"
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:inputType="number"
        android:autofillHints="@string/mg_mortgage_base"
        android:hint="@string/mg_mortgage_base"/>
    <Switch
        android:id="@+id/mg_money_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="$"
        android:layout_below="@id/mg_mortgage_value"
        android:layout_marginStart="30dp"/>

    <TextView
        android:id="@+id/mg_contribution_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mg_contribution_title"
        android:layout_below="@id/mg_title"
        android:layout_toEndOf="@id/mg_mortgage_title"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/mg_contribution_value"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/mg_mortgage_title"
        android:layout_toEndOf="@id/mg_mortgage_title"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:inputType="number"
        android:autofillHints="@string/mg_contribution_base"
        android:hint="@string/mg_contribution_base"/>

    <TextView
        android:id="@+id/mg_interest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mg_interest_title"
        android:layout_below="@id/mg_title"
        android:layout_toEndOf="@id/mg_contribution_value"
        android:layout_marginStart="30dp"
        android:layout_marginTop="10dp"/>
    <EditText
        android:id="@+id/mg_interest_value"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@id/mg_mortgage_title"
        android:layout_toEndOf="@id/mg_contribution_value"
        android:layout_marginTop="5dp"
        android:layout_marginStart="30dp"
        android:inputType="number"
        android:autofillHints="@string/mg_interest_base"
        android:hint="@string/mg_interest_base"/>
    <TextView
        android:id="@+id/mg_interest_percent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mg_interest_percent"
        android:layout_below="@id/mg_interest_title"
        android:layout_toEndOf="@id/mg_interest_value"
        android:textSize="20sp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:id="@+id/mg_duration_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mg_duration_title"
        android:layout_toEndOf="@id/mg_interest_title"
        android:layout_below="@id/mg_title"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"/>
    <EditText
        android:id="@+id/mg_duration_value"
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_below="@id/mg_mortgage_title"
        android:layout_toEndOf="@id/mg_interest_value"
        android:layout_marginTop="5dp"
        android:layout_marginStart="60dp"
        android:inputType="number"
        android:hint="@string/mg_duration_base"
        android:autofillHints="@string/mg_duration_base"
        />
    <TextView
        android:id="@+id/mg_duration_unit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mg_duration_unit"
        android:layout_below="@id/mg_duration_title"
        android:layout_toEndOf="@id/mg_duration_value"
        android:layout_marginTop="15dp"/>

    <Button
        android:id="@+id/mg_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mg_button"
        android:layout_below="@id/mg_mortgage_value"
        android:layout_marginTop="30dp"
        android:layout_marginStart="20dp"
        />

    <TextView
        android:id="@+id/mg_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/mg_result"
        android:layout_below="@id/mg_money_unit"
        android:layout_toEndOf="@id/mg_button"
        android:layout_marginTop="10dp"
        android:layout_marginStart="20dp"
        android:textSize="20sp"/>
</RelativeLayout>